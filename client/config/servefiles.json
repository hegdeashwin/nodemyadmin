{
	"usebanner": ["client/prod/apps/**/*.js"],
	"jshint": {
		"files": [
			"client/apps/**/*.js"
		],
		"ignore": [
			"client/main.js",
			"client/systems/libs/**/*.js",
			"client/systems/frameworks/**/*.js"
		]
	},
	"jscs": {
		"files": [
			"client/apps/**/*.js"
		]
	},
	"csslint": {
		"files": [
			"client/stylesheets/css/**/*.css"
		],
		"ignore": [
			"client/systems/libs/**/*.css",
			"client/systems/frameworks/**/*.css"
		]
	},
	"jsonlint": [
		"package.json",
		"client/config/banner.json",
		"client/config/lints/.jscsrc",
		"client/config/lints/.jshintrc",
		"client/config/lints/.csslintrc",
		"client/config/lints/.htmlhint-n-rc",
		"client/config/lints/.htmlhint-t-rc"
	],
	"htmlhint": {
		"Root_HTML_Files": {
			"files": [
				"client/*.html"
			],
			"ignore": []
		},
		"Templates": {
			"files": [
				"client/templates/**/*.html"
			],
			"ignore": []
		}
	},
	"less": {
		"readyMade": {
			"files": {
				"client/systems/frameworks/bootstrap/css/bootstrap.min.css": "client/systems/frameworks/bootstrap/less/bootstrap.less",
				"client/systems/frameworks/bootstrap/css/bootstrap-theme.min.css": "client/systems/frameworks/bootstrap/less/theme.less"
			}
		},
		"customMade": {
			"files": {
				"client/stylesheets/css/consolidate.css": "client/stylesheets/less/_consolidate.less"
			}
		}
	},
	"watch": {
		"less": {
			"files": [
				"client/stylesheets/less/**/*.less"
			]
		}
	},
	"htmlmin": {
		"files": {
			"client/prod/index.html": "client/prod/index.html",
			"client/prod/templates/homeTpl.html": "client/prod/templates/homeTpl.html",
			"client/prod/templates/aboutTpl.html": "client/prod/templates/aboutTpl.html"
		}
	}
}